<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ListPreference
        android:icon="@drawable/ic_filter_list"
        android:entries="@array/entries"
        android:entryValues="@array/entriesValues"
        android:key="prefSortKey"
        android:defaultValue="name"
        android:summary="Choose how sort notes on main screen"
        android:title="Sort options">
    </ListPreference>
    <ListPreference
        android:icon="@drawable/ic_data"
        android:entries="@array/dsEntries"
        android:entryValues="@array/dsValues"
        android:key="prefImplementation"
        android:defaultValue="ROOM"
        android:summary="Choose room or cursor impl"
        android:title="Data source">
    </ListPreference>
</androidx.preference.PreferenceScreen>